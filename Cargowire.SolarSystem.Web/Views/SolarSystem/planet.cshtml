@model PlanetViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Name</title>
    <link type="text/css" rel="stylesheet" href="/Content/Styles/default.css" />
</head>
<body>
   <h1>@Model.Name</h1>

    <img src="@Model.Image" alt="" />

    <ul>
        <li>Mass: @Model.Mass kg</li>
        <li>Diameter: @Model.Diameter km</li>
        <li>Distance from the sun: @Model.DistanceFromSun km</li>
    </ul>

    <p>@Model.Description</p>
</body>

</html>